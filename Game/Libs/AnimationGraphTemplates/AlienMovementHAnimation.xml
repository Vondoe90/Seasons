<AGTemplate name="AlienMovementHAnimation">
   <Param name="animation" type="string"/>
   <Param name="TransitionTime" type="float"/>
   <Param name="playback_speed" type="float"/>
   <Param name="stay_in_state_until" type="float"/>

	 <MovementControlMethod horizontal="Animation" vertical="Entity"/>

	
   <TransitionParamsLayer1
   	 BlendInTime="-1"
   	 BlendOutTime="-1"
   	 TransitionTime="$TransitionTime"
   	 KeyTime="-1"
   	 LockInterpolation="0"
   	 LoopAnimation="0"
   	 RepeatLastKey="1"
   	 PhaseSynching="0"
   	 VtimeWarping="0"
   	 IgnoreFootplants="1"
   	 Recursive="0"
   	 Aligned="0"
   	 NoDefaultIdle="0"
   	 RetainDirection="1"
   	 WaitForAnimation="1"
   	 />
   	 
   <AnimationLayer1
     animation1="$animation"
     animation2=""
     ensureInStack="0"
     stickyOutTime="-1"
     stayInStateUntil="$stay_in_state_until"
     forceLeaveWhenFinished="0"
     speedMultiplier="$playback_speed"
     />
     
</AGTemplate>
