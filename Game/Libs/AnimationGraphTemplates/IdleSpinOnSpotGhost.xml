<AGTemplate name="IdleSpinOnSpotGhost">
	<Param name="animation" type="string"/>
	<Param name="playback_speed" type="float"/>
	<Param name="structure" type="string"/>
  <Param name="transition_time" type="float"/>

  <Param name="aim_pose" type="string"/>

  <ColliderMode mode="Disabled"/>

  <!-- <OverrideAttrs additionalTurnMultiplier="3"/> -->
	
	<SelectWhen>
		<Action value="idle"/>
		<PseudoSpeed min="0" max="0.2"/>
		<!-- e3 hack		<DesiredTurnAngleZ min="-0.3" max="0.3"/> -->
	</SelectWhen>

	<ParamsLayer1
		Structure="$structure"
		TransitionTime="iff( $transition_time == 0, 0.2, $transition_time )"
		KeyTime="-1"
		LoopAnimation="1"
		RepeatLastKey="0"
		VTimeWarping="0"
		/>

	<AnimationLayer1
		animation1="$animation"
		aimPose="$aim_pose"
		ensureInStack="0"
		stickyOutTime="0.3"
		forceLeaveWhenFinished="0"
		speedMultiplier="$playback_speed"
		/>
</AGTemplate>

